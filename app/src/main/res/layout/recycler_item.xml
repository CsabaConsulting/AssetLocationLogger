<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/locateAsset"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/deleteAsset"
        style="@style/Widget.MaterialComponents.Button.Icon"
        app:icon="@drawable/ic_location"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/deleteAsset"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/Widget.MaterialComponents.Button.Icon"
        app:icon="@drawable/ic_delete"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        />

    <TextView
        android:id="@+id/assetTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/locateAsset"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/assetCreated"
        android:layout_marginEnd="8dp"
        android:textSize="16sp"
        android:fontFamily="sans-serif-black"
        tools:text="Long asset name"
        />

    <TextView
        android:id="@+id/assetCreated"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/assetTitle"
        app:layout_constraintEnd_toStartOf="@id/assetUpdated"
        app:layout_constraintTop_toBottomOf="@id/assetTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="12sp"
        android:fontFamily="sans-serif"
        tools:text="10.12.2018 22:33"
        />

    <TextView
        android:id="@+id/assetUpdated"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/assetCreated"
        app:layout_constraintEnd_toEndOf="@id/assetTitle"
        app:layout_constraintTop_toBottomOf="@id/assetTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="12sp"
        android:fontFamily="sans-serif"
        tools:text="10.12.2018 22:33"
        />


</androidx.constraintlayout.widget.ConstraintLayout>